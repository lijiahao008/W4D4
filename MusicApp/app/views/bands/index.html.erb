
<h1>Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= link_to band.name, band_url(band.id) %></td>
        <td><%= link_to 'Edit', edit_band_path(band), class: "btn btn-xs btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Band', new_band_path, class: "btn btn-success" %>
