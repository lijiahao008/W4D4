
<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Live or studio </th>
      <th>Band</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= album.live_or_studio %></td>
        <td><%= album.band.name %></td>

        <td><%= link_to 'Edit', edit_album_path(album), class: "btn btn-xs btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class: "btn btn-success"%>
